<div class="fab-user">
  <% user = @fab.user %>

  <div style="background-image: url(<%= user.avatar.url(:thumb) %>)" class="portrait"></div>
  <figcaption>
    <hgroup>
      <h1><%= link_to(user.name, user_fabs_path(user)) %></h1>
      <h2><%= user.title %></h2>
    </hgroup>

    <% if @fab.gif_tag.present? %>
      <div style="background-image: url(<%= @fab.gif_tag.url(:thumb) %>)" class="portrait"></div>
    <% end %>
  </figcaption>

  <%= render partial: "fabs/fab_notes", locals: { fab: @fab } %>

  <div class="user-actions">
    <%= link_to 'Edit', edit_user_fab_path %> |
    <%= link_to 'Destroy', [@user, @fab], method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', user_fabs_path %>
  </div>
</div>
